# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index
GET     /athlete/                       controllers.Application.athlete
GET     /koms/                          controllers.Application.koms
GET     /friends/                       controllers.Application.currentFriends
GET     /friends/:id                    controllers.Application.friends(id)

#Activities
GET     /activities/                    controllers.Application.myActivities
GET     /activities/friends             controllers.Application.friendsActivities
GET     /activity/:id                   controllers.Application.activity(id)
POST    /activity/                      controllers.Application.createActivity()



#Streams
GET     /streams/activity               controllers.Application.activityStreams
GET     /streams/segment                controllers.Application.segmentStreams
GET     /streams/effort                 controllers.Application.effortStreams


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
