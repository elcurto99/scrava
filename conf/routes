# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index
GET     /athlete                        controllers.Application.athlete
GET     /athlete/koms                   controllers.Application.koms
GET     /athlete/friends                controllers.Application.friends

#Activity
GET     /activity/:id                  controllers.Application.activity(id: Int)
GET     /activity/:id/comments         controllers.Application.activityComments(id: Int)

#Activities
GET     /activities                    controllers.Application.myActivities
GET     /activities/friends            controllers.Application.friendsActivities



#Streams
GET     /streams/activity               controllers.Application.activityStreams
GET     /streams/segment                controllers.Application.segmentStreams
GET     /streams/effort                 controllers.Application.effortStreams


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
